<h1>Projects</h1>

<% if @projects.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Tags</th>
        <th>Money budget</th>
        <th>Time budget</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= link_tags(project.tags) %></td>
        <td><%= money(project.money_budget, project.user.currency_unit) %></td>
        <td><%= distance_of_time_in_words(project.time_budget*60*60) if project.time_budget %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @projects %>
<% else %>
  <p>You don't have any project yet.</p>
<% end %>

<%= link_to 'New Project', new_project_path, class: 'btn btn-default' %>
