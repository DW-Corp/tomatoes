<h1>Tomatoes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Started at</th>
      <th>Tags</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @tomatoes.each do |tomato| %>
    <tr>
      <td><%= link_to l(tomato.created_at - Tomato::DURATION, format: :long), tomato %></td>
      <td><%= link_tags(tomato.tags) %></td>
      <td><%= link_to 'Show', tomato %></td>
      <td><%= link_to 'Edit', edit_tomato_path(tomato) %></td>
      <td><%= link_to 'Destroy', tomato, data: { confirm: 'Are you sure?' }, method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @tomatoes %>

<%= link_to 'New Tomato', new_tomato_path, class: 'btn btn-default' %>
